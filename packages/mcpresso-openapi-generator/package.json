{
  "name": "mcpresso-openapi-generator",
  "version": "2.0.0",
  "description": "Generate MCPresso servers from OpenAPI specifications",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcpresso-openapi-generator": "dist/cli.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun build ./src/cli.ts --outdir ./dist --target node",
    "dev": "bun run build --watch",
    "start": "node dist/cli.js",
    "test": "bun test",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "mcpresso",
    "openapi",
    "generator",
    "mcp",
    "server",
    "typescript",
    "zod"
  ],
  "author": "Granular Software",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/granular-software/mcpresso-openapi-generator.git"
  },
  "bugs": {
    "url": "https://github.com/granular-software/mcpresso-openapi-generator/issues"
  },
  "homepage": "https://github.com/granular-software/mcpresso-openapi-generator#readme",
  "dependencies": {
    "mcpresso": "^0.3.0",
    "zod": "^3.23.8",
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}