{
  "id": "template-express-oauth-sqlite",
  "name": "Express + OAuth2.1 + SQLite",
  "description": "Simple MCP server with OAuth2.1 authentication using SQLite database",
  "category": "express",
  "authType": "oauth",
  "complexity": "easy",
  "version": "1.0.0",
  "mcpressoVersion": "^0.7.7",
  "features": [
    "OAuth2.1 authentication",
    "SQLite database (file-based)",
    "Express.js server",
    "Development-friendly",
    "User management"
  ],
  "requirements": [
    "Node.js 18+",
    "npm or yarn"
  ],
  "envVars": [
    {
      "name": "JWT_SECRET",
      "description": "Secret key for JWT tokens",
      "required": true,
      "example": "your-secure-secret-key-here"
    },
    {
      "name": "PORT",
      "description": "Server port",
      "required": false,
      "default": "3000"
    },
    {
      "name": "SERVER_URL",
      "description": "Base URL of your server",
      "required": true,
      "example": "http://localhost:3000"
    }
  ],
  "resourceFolders": ["src/resources"],
  "configFiles": [
    "package.json",
    "tsconfig.json",
    "env.example"
  ]
} 